                        <ScrollPane fitToHeight="true" fitToWidth="true" VBox.vgrow="ALWAYS">
                          <content>
                            <AnchorPane>
                                 <children>
                                    <VBox alignment="TOP_CENTER" prefHeight="284.0" prefWidth="216.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                       <children>
                                          <Label text="Colour Selection" textFill="#727272">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label text="Hue" />
                                          <RangeSlider fx:id="hueSlider" max="360.0" blockIncrement="0.1" highValue="250.0" lowValue="1.0" onDragDone="#updateValues">
                                             <VBox.margin>
                                                <Insets bottom="5.0" />
                                             </VBox.margin>
                                          </RangeSlider>
                                          <Label text="Saturation" />
                                          <RangeSlider fx:id="saturationSlider" blockIncrement="0.1" highValue="0.9" lowValue="0.1" onDragDone="#updateValues">
                                             <VBox.margin>
                                                <Insets bottom="5.0" />
                                             </VBox.margin>
                                          </RangeSlider>
                                           <Label layoutX="96.0" layoutY="71.0" text="Lightness" />
                                           <RangeSlider fx:id="lightnessSlider" blockIncrement="0.1" highValue="0.9" lowValue="0.1" onDragDone="#updateValues">
                                               <VBox.margin>
                                                   <Insets bottom="5.0" />
                                               </VBox.margin>
                                           </RangeSlider>
                                          <Label layoutX="65.0" layoutY="20.0" text="Edit" textFill="#727272">
                                             <font>
                                                <Font name="System Bold" size="14.0" />
                                             </font>
                                          </Label>
                                          <Label fx:id="contrastLabel" layoutX="100.0" layoutY="20.0" text="Contrast" />
