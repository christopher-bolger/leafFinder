                                          <Label fx:id="greenChannelLabel" text="Saturation" />
                                          <Slider fx:id="greenChannel" blockIncrement="3.0" min="-100.0" onMouseReleased="#processImage" showTickLabels="true" showTickMarks="true" />
                                          <Label fx:id="blueChannelLabel" text="Brightness" />
                                          <Slider fx:id="blueChannel" blockIncrement="3.0" min="-100.0" onMouseReleased="#processImage" showTickLabels="true" showTickMarks="true" />
                                       </children>
                                       <opaqueInsets>
                                          <Insets />
                                       </opaqueInsets>
                                       <padding>
                                          <Insets left="20.0" right="20.0" top="10.0" />
                                       </padding>
                                    </VBox>
                                 </children>
                              </AnchorPane>
                          </content>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </ScrollPane>
                        <ButtonBar prefHeight="40.0" prefWidth="200.0">
                          <buttons>
                            <Button fx:id="applyButton" mnemonicParsing="false" onAction="#applyChanges" text="Apply" />
                          </buttons>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                           <padding>
                              <Insets right="15.0" />
                           </padding>
                        </ButtonBar>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
        </items>
      </SplitPane>
   </children>
</AnchorPane>
