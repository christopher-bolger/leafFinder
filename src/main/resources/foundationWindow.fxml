<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="leafFinder.controller.FoundationWindow">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar fx:id="menuBar" prefHeight="25.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                        <MenuItem fx:id="loadImage" mnemonicParsing="false" onAction="#loadImage" text="Load" />
                    <MenuItem fx:id="saveImage" disable="true" mnemonicParsing="false" onAction="#saveImage" text="Save as..." />
                        <MenuItem fx:id="closeWindow" mnemonicParsing="false" onAction="#closeWindow" text="Close" />
                  </items>
                </Menu>
                  <Menu fx:id="viewOption" disable="true" mnemonicParsing="false" text="View">
                     <items>
                        <MenuItem fx:id="viewOriginalAction" mnemonicParsing="false" onAction="#viewOriginal" text="âœ“ Original" />
                        <MenuItem fx:id="viewPreviewAction" mnemonicParsing="false" onAction="#viewPreview" text="Preview" />
                        <MenuItem fx:id="bAndWAction" mnemonicParsing="false" onAction="#viewBAndW" text="B&amp;W" />
                        <MenuItem fx:id="viewSelectionAction" mnemonicParsing="false" onAction="#viewSelection" text="Selection" />
                        <MenuItem fx:id="viewDownscaledAction" mnemonicParsing="false" onAction="#viewDownscaled" text="Downscaled" />
                     </items>
                  </Menu>
                  <Menu fx:id="settings" disable="true" mnemonicParsing="false" text="Settings">
                     <items>
                        <MenuItem fx:id="EditSettings" mnemonicParsing="false" onAction="#openSettingsDialog" text="Edit" />
                     </items></Menu>
              </menus>
            </MenuBar>
            <TabPane fx:id="tabPane" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
   </children>
</AnchorPane>
